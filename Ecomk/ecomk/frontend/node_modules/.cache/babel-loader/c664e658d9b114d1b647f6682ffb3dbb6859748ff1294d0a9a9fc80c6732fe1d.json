n>\r\n      </div>\r\n      <div class=\"menu-items\">\r\n        <div\r\n          v-for=\"product in filteredProducts\"\r\n          :key=\"product.id\"\r\n          class=\"menu-item\"\r\n        >\r\n          <img :src=\"product.image_url\" :alt=\"product.name\" />\r\n          <p>{{ product.name }}</p>\r\n          <p>{{ product.price }} Php</p>\r\n          <button\r\n            :class=\"{ active: selectedProduct === product.id }\"\r\n            @click=\"selectProduct(product)\"\r\n          >\r\n            Add Item\r\n          </button>\r\n        </div>\r\n      </div>\r\n    </div>\r\n\r\n    <!-- Right Section -->\r\n    <div class=\"order-summary-section\">\r\n      <OrderSummary\r\n        :orderItems=\"orderItems\"\r\n        @remove-item=\"removeItem\"\r\n        @clear-order=\"clearOrder\"\r\n      />\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport axios from \"axios\";\r\nimport OrderSummary from \"../components/OrderSummary.vue\";\r\n\r\nexport default {\r\n  components: { OrderSummary },\r\n  data() {\r\n    return {\r\n      categories: [\"All\", \"Beverages\", \"Desserts\", \"Add Ons\"],\r\n      selectedCategory: \"All\",\r\n      products: [],\r\n      filteredProducts: [],\r\n      orderItems: [],\r\n      selectedProduct: null, // Tracks the currently selected product\r\n    };\r\n  },\r\n  methods: {\r\n    async fetchProducts() {\r\n      try {\r\n        const response = await axios.get(\"http://localhost:5000/api/products\");\r\n        this.products = response.data;\r\n        this.filteredProducts = this.products;\r\n      } catch (error) {\r\n        console.error(\"Error fetching products:\", error);\r\n      }\r\n    },\r\n    filterProducts(category) {\r\n      this.selectedCategory = category;\r\n      this.filteredProducts =\r\n        category === \"All\"\r\n          ? this.products\r\n          : this.products.filter((p) => p.category === category);\r\n    },\r\n    selectProduct(product) {\r\n      this.selectedProduct = product.id; // Update the selected product\r\n      this.addItemToOrder(product); // Add item to the order\r\n    },\r\n    addItemToOrder(product) {\r\n      const item = this.orderItems.find((i) => i.id === product.id);\r\n      if (item) {\r\n        item.quantity++;\r\n      } else {\r\n        this.orderItems.push({ ...product, quantity: 1 });\r\n      }\r\n    },\r\n    removeItem(index) {\r\n      this.orderItems.splice(index, 1);\r\n    },\r\n    clearOrder() {\r\n      this.orderItems = [];\r\n    },\r\n  },\r\n  created() {\r\n    this.fetchProducts();\r\n  },\r\n};\r\n</script>\r\n\r\n<style>\r\n.products-container {\r\n  display: flex;\r\n  justify-content: space-between;\r\n  gap: 1rem;\r\n  padding: 1rem;\r\n}\r\n\r\n.menu-section {\r\n  flex: 3;\r\n  padding: 1rem;\r\n  background-color: #f7e8e8;\r\n  border-radius: 8px;\r\n}\r\n\r\n.menu-section h2 {\r\n  margin: 0; /* Remove margin around the heading */\r\n  padding: 0.5rem 0; /* Add minimal padding to top and bottom */\r\n}\r\n\r\n.order-summary-section {\r\n  flex: 1; /* Reduced width of order summary */\r\n  padding: 1rem;\r\n  background-color: #ffffff;\r\n  border: 1px solid #ddd;\r\n  border-radius: 8px;\r\n}\r\n\r\n.filter-buttons button {\r\n  margin-right: 0.5rem;\r\n  padding: 0.5rem 1rem;\r\n  background-color: white;\r\n  color: #007bff;\r\n  border: 1px solid #007bff;\r\n  border-radius: 4px;\r\n  cursor: pointer;\r\n}\r\n\r\n.filter-buttons button.active {\r\n  background-color: #007bff;\r\n  color: white;\r\n}\r\n\r\n.filter-buttons button:hover {\r\n  background-color: #0056b3;\r\n  color: white;\r\n}\r\n\r\n.menu-items {\r\n  display: grid;\r\n  grid-template-columns: repeat(5, 1fr); /* Updated to 5 columns */\r\n  gap: 1rem;\r\n  margin-top: 1rem;\r\n  max-height: 450px; /* Set max height for 3 rows */\r\n  overflow-y: auto; /* Enable vertical scrolling */\r\n}\r\n\r\n.menu-item {\r\n  border: 1px solid #ddd;\r\n  padding: 1rem;\r\n  border-radius: 8px;\r\n  text-align: center;\r\n  background-color: #ffffff;\r\n}\r\n\r\n.menu-item img {\r\n  max-width: 100%;\r\n  border-radius: 4px;\r\n  margin-bottom: 0.5rem;\r\n}\r\n\r\n.menu-item button {\r\n  margin-top: 1rem;\r\n  background-color: white;\r\n  color: #28a745;\r\n  padding: 0.5rem 1rem;\r\n  border: 1px solid #28a745;\r\n  border-radius: 4px;\r\n  cursor: pointer;\r\n}\r\n\r\n.menu-item button.active {\r\n  background-color: #28a745;\r\n  color: white;\r\n}\r\n\r\n.menu-item button:hover {\r\n  background-color: #218838;\r\n  color: white;\r\n}\r\n</style>\r\n"],"mappings":";;EACOA,KAAK,EAAC;AAAoB;;EAExBA,KAAK,EAAC;AAAc;;EAElBA,KAAK,EAAC;AAAgB;mBALjC;;EAeWA,KAAK,EAAC;AAAY;mBAf7B;mBAAA;;EAmCSA,KAAK,EAAC;AAAuB;;;uBAlCpCC,mBAAA,CAyCM,OAzCNC,UAyCM,GAxCJC,mBAAA,kBAAqB,EACrBC,mBAAA,CA6BM,OA7BNC,UA6BM,G,0BA5BJD,mBAAA,CAAmB,YAAf,YAAU,sBACdA,mBAAA,CASM,OATNE,UASM,I,kBARJL,mBAAA,CAOSM,SAAA,QAbjBC,WAAA,CAO6BC,KAAA,CAAAC,UAAU,EAAtBC,QAAQ;yBADjBV,mBAAA,CAOS;MALNW,GAAG,EAAED,QAAQ;MACbX,KAAK,EAThBa,eAAA;QAAAC,MAAA,EAS4BL,KAAA,CAAAM,gBAAgB,KAAKJ;MAAQ;MAC9CK,OAAK,EAAAC,MAAA,IAAEC,QAAA,CAAAC,cAAc,CAACR,QAAQ;wBAE5BA,QAAQ,gCAZrBS,UAAA;oCAeMhB,mBAAA,CAgBM,OAhBNiB,UAgBM,I,kBAfJpB,mBAAA,CAcMM,SAAA,QA9BdC,WAAA,CAiB4BC,KAAA,CAAAa,gBAAgB,EAA3BC,OAAO;yBADhBtB,mBAAA,CAcM;MAZHW,GAAG,EAAEW,OAAO,CAACC,EAAE;MAChBxB,KAAK,EAAC;QAENI,mBAAA,CAAoD;MAA9CqB,GAAG,EAAEF,OAAO,CAACG,SAAS;MAAGC,GAAG,EAAEJ,OAAO,CAACK;4BArBtDC,UAAA,GAsBUzB,mBAAA,CAAyB,WAAA0B,gBAAA,CAAnBP,OAAO,CAACK,IAAI,kBAClBxB,mBAAA,CAA8B,WAAA0B,gBAAA,CAAxBP,OAAO,CAACQ,KAAK,IAAG,MAAI,iBAC1B3B,mBAAA,CAKS;MAJNJ,KAAK,EAzBlBa,eAAA;QAAAC,MAAA,EAyB8BL,KAAA,CAAAuB,eAAe,KAAKT,OAAO,CAACC;MAAE;MAC/CR,OAAK,EAAAC,MAAA,IAAEC,QAAA,CAAAe,aAAa,CAACV,OAAO;OAC9B,YAED,yBA7BVW,UAAA,E;sCAkCI/B,mBAAA,mBAAsB,EACtBC,mBAAA,CAMM,OANN+B,UAMM,GALJC,YAAA,CAIEC,uBAAA;IAHCC,UAAU,EAAE7B,KAAA,CAAA6B,UAAU;IACtBC,YAAW,EAAErB,QAAA,CAAAsB,UAAU;IACvBC,YAAW,EAAEvB,QAAA,CAAAwB","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}