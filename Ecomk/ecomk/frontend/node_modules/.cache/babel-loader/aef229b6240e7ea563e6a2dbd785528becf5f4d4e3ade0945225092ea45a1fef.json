{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport \"core-js/modules/esnext.iterator.constructor.js\";\nimport \"core-js/modules/esnext.iterator.filter.js\";\nimport \"core-js/modules/esnext.iterator.find.js\";\nimport axios from \"axios\";\nexport default {\n  components: {\n    OrderSummary\n  },\n  data() {\n    return {\n      categories: [\"All\", \"Beverages\", \"Desserts\", \"Add Ons\"],\n      selectedCategory: \"All\",\n      products: [],\n      filteredProducts: [],\n      orderItems: [],\n      selectedProduct: null // Tracks the currently selected product\n    };\n  },\n  methods: {\n    async fetchProducts() {\n      try {\n        const response = await axios.get(\"http://localhost:5000/api/products\");\n        this.products = response.data;\n        this.filteredProducts = this.products;\n      } catch (error) {\n        console.error(\"Error fetching products:\", error);\n      }\n    },\n    filterProducts(category) {\n      this.selectedCategory = category;\n      this.filteredProducts = category === \"All\" ? this.products : this.products.filter(p => p.category === category);\n    },\n    selectProduct(product) {\n      this.selectedProduct = product.id; // Update the selected product\n      this.addItemToOrder(product); // Add item to the order\n    },\n    addItemToOrder(product) {\n      const item = this.orderItems.find(i => i.id === product.id);\n      if (item) {\n        item.quantity++;\n      } else {\n        this.orderItems.push({\n          ...product,\n          quantity: 1\n        });\n      }\n    },\n    removeItem(index) {\n      this.orderItems.splice(index, 1);\n    },\n    clearOrder() {\n      this.orderItems = [];\n    }\n  },\n  created() {\n    this.fetchProducts();\n  }\n};","map":{"version":3,"names":["axios","components","OrderSummary","data","categories","selectedCategory","products","filteredProducts","orderItems","selectedProduct","methods","fetchProducts","response","get","error","console","filterProducts","category","filter","p","selectProduct","product","id","addItemToOrder","item","find","i","quantity","push","removeItem","index","splice","clearOrder","created"],"sources":["C:\\Users\\norma\\project\\ecomk\\frontend\\src\\views\\Menu.vue"],"sourcesContent":["<template>\r\n  <div class=\"products-container\">\r\n    <!-- Left Section -->\r\n    <div class=\"menu-section\">\r\n      <h2>Menu Items</h2>\r\n      <div class=\"filter-buttons\">\r\n        <button\r\n          v-for=\"category in categories\"\r\n          :key=\"category\"\r\n          :class=\"{ active: selectedCategory === category }\"\r\n          @click=\"filterProducts(category)\"\r\n        >\r\n          {{ category }}\r\n        </button>\r\n      </div>\r\n      <div class=\"menu-items\">\r\n        <div\r\n          v-for=\"product in filteredProducts\"\r\n          :key=\"product.id\"\r\n          class=\"menu-item\"\r\n        >\r\n          <img :src=\"product.image_url\" :alt=\"product.name\" />\r\n          <p>{{ product.name }}</p>\r\n          <p>{{ product.price }} Php</p>\r\n          <button\r\n            :class=\"{ active: selectedProduct === product.id }\"\r\n            @click=\"selectProduct(product)\"\r\n          >\r\n            Add Item\r\n          </button>\r\n        </div>\r\n      </div>\r\n    </div>\r\n\r\n    <!-- Right Section -->\r\n    <div class=\"order-summary-section\">\r\n      <OrderSummary\r\n        :orderItems=\"orderItems\"\r\n        @remove-item=\"removeItem\"\r\n        @clear-order=\"clearOrder\"\r\n      />\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport axios from \"axios\";\r\n\r\nexport default {\r\n  components: { OrderSummary },\r\n  data() {\r\n    return {\r\n      categories: [\"All\", \"Beverages\", \"Desserts\", \"Add Ons\"],\r\n      selectedCategory: \"All\",\r\n      products: [],\r\n      filteredProducts: [],\r\n      orderItems: [],\r\n      selectedProduct: null, // Tracks the currently selected product\r\n    };\r\n  },\r\n  methods: {\r\n    async fetchProducts() {\r\n      try {\r\n        const response = await axios.get(\"http://localhost:5000/api/products\");\r\n        this.products = response.data;\r\n        this.filteredProducts = this.products;\r\n      } catch (error) {\r\n        console.error(\"Error fetching products:\", error);\r\n      }\r\n    },\r\n    filterProducts(category) {\r\n      this.selectedCategory = category;\r\n      this.filteredProducts =\r\n        category === \"All\"\r\n          ? this.products\r\n          : this.products.filter((p) => p.category === category);\r\n    },\r\n    selectProduct(product) {\r\n      this.selectedProduct = product.id; // Update the selected product\r\n      this.addItemToOrder(product); // Add item to the order\r\n    },\r\n    addItemToOrder(product) {\r\n      const item = this.orderItems.find((i) => i.id === product.id);\r\n      if (item) {\r\n        item.quantity++;\r\n      } else {\r\n        this.orderItems.push({ ...product, quantity: 1 });\r\n      }\r\n    },\r\n    removeItem(index) {\r\n      this.orderItems.splice(index, 1);\r\n    },\r\n    clearOrder() {\r\n      this.orderItems = [];\r\n    },\r\n  },\r\n  created() {\r\n    this.fetchProducts();\r\n  },\r\n};\r\n</script>\r\n\r\n<style>\r\n.products-container {\r\n  display: flex;\r\n  justify-content: space-between;\r\n  gap: 1rem;\r\n  padding: 1rem;\r\n}\r\n\r\n.menu-section {\r\n  flex: 3;\r\n  padding: 1rem;\r\n  background-color: #f7e8e8;\r\n  border-radius: 8px;\r\n}\r\n\r\n.menu-section h2 {\r\n  margin: 0; /* Remove margin around the heading */\r\n  padding: 0.5rem 0; /* Add minimal padding to top and bottom */\r\n}\r\n\r\n.order-summary-section {\r\n  flex: 1; /* Reduced width of order summary */\r\n  padding: 1rem;\r\n  background-color: #ffffff;\r\n  border: 1px solid #ddd;\r\n  border-radius: 8px;\r\n}\r\n\r\n.filter-buttons button {\r\n  margin-right: 0.5rem;\r\n  padding: 0.5rem 1rem;\r\n  background-color: white;\r\n  color: #007bff;\r\n  border: 1px solid #007bff;\r\n  border-radius: 4px;\r\n  cursor: pointer;\r\n}\r\n\r\n.filter-buttons button.active {\r\n  background-color: #007bff;\r\n  color: white;\r\n}\r\n\r\n.filter-buttons button:hover {\r\n  background-color: #0056b3;\r\n  color: white;\r\n}\r\n\r\n.menu-items {\r\n  display: grid;\r\n  grid-template-columns: repeat(5, 1fr); /* Updated to 5 columns */\r\n  gap: 1rem;\r\n  margin-top: 1rem;\r\n  max-height: 450px; /* Set max height for 3 rows */\r\n  overflow-y: auto; /* Enable vertical scrolling */\r\n}\r\n\r\n.menu-item {\r\n  border: 1px solid #ddd;\r\n  padding: 1rem;\r\n  border-radius: 8px;\r\n  text-align: center;\r\n  background-color: #ffffff;\r\n}\r\n\r\n.menu-item img {\r\n  max-width: 100%;\r\n  border-radius: 4px;\r\n  margin-bottom: 0.5rem;\r\n}\r\n\r\n.menu-item button {\r\n  margin-top: 1rem;\r\n  background-color: white;\r\n  color: #28a745;\r\n  padding: 0.5rem 1rem;\r\n  border: 1px solid #28a745;\r\n  border-radius: 4px;\r\n  cursor: pointer;\r\n}\r\n\r\n.menu-item button.active {\r\n  background-color: #28a745;\r\n  color: white;\r\n}\r\n\r\n.menu-item button:hover {\r\n  background-color: #218838;\r\n  color: white;\r\n}\r\n</style>\r\n"],"mappings":";;;;AA8CA,OAAOA,KAAI,MAAO,OAAO;AAEzB,eAAe;EACbC,UAAU,EAAE;IAAEC;EAAa,CAAC;EAC5BC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,UAAU,EAAE,CAAC,KAAK,EAAE,WAAW,EAAE,UAAU,EAAE,SAAS,CAAC;MACvDC,gBAAgB,EAAE,KAAK;MACvBC,QAAQ,EAAE,EAAE;MACZC,gBAAgB,EAAE,EAAE;MACpBC,UAAU,EAAE,EAAE;MACdC,eAAe,EAAE,IAAI,CAAE;IACzB,CAAC;EACH,CAAC;EACDC,OAAO,EAAE;IACP,MAAMC,aAAaA,CAAA,EAAG;MACpB,IAAI;QACF,MAAMC,QAAO,GAAI,MAAMZ,KAAK,CAACa,GAAG,CAAC,oCAAoC,CAAC;QACtE,IAAI,CAACP,QAAO,GAAIM,QAAQ,CAACT,IAAI;QAC7B,IAAI,CAACI,gBAAe,GAAI,IAAI,CAACD,QAAQ;MACvC,EAAE,OAAOQ,KAAK,EAAE;QACdC,OAAO,CAACD,KAAK,CAAC,0BAA0B,EAAEA,KAAK,CAAC;MAClD;IACF,CAAC;IACDE,cAAcA,CAACC,QAAQ,EAAE;MACvB,IAAI,CAACZ,gBAAe,GAAIY,QAAQ;MAChC,IAAI,CAACV,gBAAe,GAClBU,QAAO,KAAM,KAAI,GACb,IAAI,CAACX,QAAO,GACZ,IAAI,CAACA,QAAQ,CAACY,